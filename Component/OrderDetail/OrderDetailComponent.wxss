}

.cancelButton{
  margin-left: 40%;
  width: 25%;
  height: 36px;
  line-height: 36px;
  border: 1px solid #3DA8F5;
  color: #3DA8F5;
  font-size: 15px;
  background-color: white;
}

.cancelButton::after{
  border: none;
}

.surePayButton{
  width: 25%;
  height: 36px;
  line-height: 36px;
  color: white;
  background-color: #3DA8F5;
  font-size: 15px;
}

