  height: 38px;
}

.memberDiscounTextValue {
  margin-right: 10px;
  font-size: 14px;
  text-align: right;
  color: #222;
  font-weight: 500;
}

.memberDiscounTextTitle {
  margin: 0px;
  font-size: 14px;
}

.storeInfoView {
  display: flex;
  margin-top: 5px;
  width: 100%;
  background-color: white;
}

.storeIconImage {
  margin-left: 10px;
  margin-top: 10px;
  width: 23px;
  height: 32px;
}

.storeContentView {
  display: flex;
  flex-direction: column;
  margin-left: 10px;
  width: calc(100% - 35px);
}

.storeTitleView {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  height: 50px;
  line-height: 50px;
  font-size: 16px;
}

.storeInfoTitle {
  width: 50%;
  font-size: 16px;
  color: #222;
  font-weight: 500;
}

.storeNumText {
  margin-right: 10px;
  font-size: 14px;
  text-align: center;
}

.storeLineImage {
  margin: 0px;
  width: 100%;
  height: 1px;
}

.storeAddressInfoView {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 10px;
