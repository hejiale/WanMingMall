  color: #333333;
  text-align: right;
}

.pickUpGoodsImage {
  width: 23px;
  height: 20px;
}

.pickUpGoodsTitle {
  margin-left: 10px;
  width: 70px;
  height: 20px;
  font-size: 16px;
  font-weight: 500;
}

.addressInfoView {
  display: flex;
  align-items: center;
  margin-top: 5px;
  width: 100%;
  height: 80px;
  background-color: white;
}

.addressIconImage {
  margin-left: 10px;
  width: 23px;
  height: 32px;
}

.contactInfoView {
  display: flex;
  flex-direction: column;
  margin-left: 10px;
  width: calc(100% - 53px);
}

.contactNameView {
  display: flex;
  width: 100%;
}

.contactNameText {
  margin: 0px;
  width: 100%;
  height: 100%;
  font-size: 16px;
  font-weight: 500;
}

.contactAddressView {
  display: flex;
  margin-left: 0px;
  width: 100%;
}

.contactAddressText {
  margin: 0px;
  width: 100%;
  height: 100%;
  font-size: 14px;
}

.rightIconImage {
  margin: 0px;
