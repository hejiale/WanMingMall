  height: 20px;
}

.productContentView {
  display: flex;
  flex-flow: column;
  width: 100%;
  background-color: white;
}

.productView {
  display: flex;
  margin-top: 1px;
  width: 100%;
  height: 84px;
  align-items: center;
  background-color: #fafafa;
}

.productImage {
  margin-left: 10px;
  width: 54px;
  height: 54px;
}

.productInfo {
  display: flex;
  flex-direction: column;
  margin-left: 20px;
  width: calc(100% - 84px);
}

.productNameText {
  font-size: 16px;
  width: calc(100% -20px);
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  font-weight: 500;
}

.specificationsText {
  font-size: 12px;
  color: #666;
  height: 25px;
  line-height: 25px;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.priceView {
  margin-right: 10px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.numText {
  font-size: 12px;
  text-align: right;
  color: #666666;
}

.price {
  font-size: 14px;
  color: #222;
  font-weight: 500;
}

.shouldPayAmountView {
  display: flex;
  align-items: center;
  margin-top: 5px;
  width: 100%;
  height: 60px;
  background-color: white;
}

