.scrollView {
  position: relative;
  width: 100%;
}

.orderStatusView {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 5px;
  width: 100%;
  height: 60px;
  background-color: white;
}

.orderStatusTitle {
  margin-left: 10px;
  font-size: 20px;
  color: #222;
  font-weight: 500;
}

.orderCodeTitle {
  margin-right: 10px;
  font-size: 14px;
  color: #999;
  text-align: right;
}

.deliveryModeView {
  display: flex;
  flex-direction: row;
