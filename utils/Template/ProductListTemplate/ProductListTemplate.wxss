.productView {
  display: inline-block;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  padding-bottom: 20px;
  background-color: white;
  width: 100%;
}

.productSubView {
  display: inline-block;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  width: calc(50% - 5px);
  background-color: white;
  margin-left: 5px;
  margin-bottom: 5px;
  padding-bottom: 20px;
}

.productImageView{
  margin-left: 10%;
  width: 80%;
  height: 112px;
}

.productImage {
  width: 100%;
  height: 100%;
}

.productSingleImage {
  width: 60%;
  height: 128px;
}

.productInfoView {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 10px;
  width: 100%;
}

.productSingleInfoView {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 40%;
}

.productText {
  margin-top: 5px;
  width: 100%;
  font-size: 14px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  text-align: center;
}

.priceText {
  margin-top: 10px;
  font-size: 17px;
  font-weight: 800;
  text-align: center;
}
 
.productLeftSingleView {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  background-color: white;
  padding-top: 20px;
  padding-bottom: 20px;
}

.productLeftSingleImage {
  margin-left: 5%;
  width: 40%;
  height: 128px;
}

.productLeftSingleInfoView {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 55%;
}


.productLeftSingleText {
  font-size: 14px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  text-align: right;
  margin-top: 10px;
  width: 85%;
}


.priceLeftSingleText {
  margin-top: 5px;
  font-size: 17px;
  font-weight: 800;
  text-align: right;
  width: 85%;
} 

.gray{
  background-color: #e6e6e6;
}


