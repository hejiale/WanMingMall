@import "Template/AddressTemplate.wxss";
@import "../../utils/Template/BackGroundTemplate/BackGroundTemplate.wxss";

.scroll-container {
  width: 100%;
  padding-bottom: 45px;
}

.emptyCartView{
  position: fixed;
  display: flex;
  align-items: center;
  justify-content: center;
  top: 0px;
  width: 100%;
  height: calc(100% - 40px);
}

.emptyImage{
  width: 182px;
  height: 218px;
  margin-bottom: 56px;
}

.footView {
  display: flex;
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 40px;
  background-color: white;
}

.addAddressText {
  flex: 1;
  margin: 5px;
  color: #3DA8F5;
  font-size: 13px;
  line-height: 28px;
  text-align: center;
  border: 1px solid #3DA8F5;
  border-radius: 3px;
}

.addWechatText{
  flex: 1;
  margin: 5px;
  color: #44b549;
  font-size: 13px;
  line-height: 28px;
  text-align: center;
  border: 1px solid #44b549;
  border-radius: 3px;
}
