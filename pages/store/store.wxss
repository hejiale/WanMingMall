@import "Template/StoreTemplate.wxss";
@import "../../utils/Template/BackGroundTemplate/BackGroundTemplate.wxss";

.topView {
  display: flex;
  position: fixed;
  justify-content: center;
  align-items: center;
  top: 0px;
  width: 100%;
  height: 50px;
  z-index: 1000;
  background-color: #f5f5f5;
}

.searchView {
  display: flex;
  align-items: center;
  width: 90%;
  height: 30px;
  background-color: white;
  border-radius: 8px;
}

.seachImage {
  margin-left: 10px;
  width: 15px;
  height: 15px;
}

.searchInput {
  margin-left: 10px;
  width: calc(100% - 25px);
  height: 100%;
  line-height: 30px;
  font-size: 13px;
}

.storeListView {
  position: fixed;
  top: 50px;
  width: 100%;
}
