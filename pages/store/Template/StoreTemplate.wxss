.contentView {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 1px;
  width: 100%;
  background-color: white;
}

.storeNameView {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 10px;
  width: 100%;
  height: 30px;
}

.distanceView {
  display: flex;
  align-items: center;
  height: 100%;
  margin-right: 20px;
}

.storeImage {
  margin-top: 10px;
  margin-left: 20px;
  margin-right: 20px;
  width: calc(100% - 40px);
  border-radius: 8px;
}

.storeAddressView {
  display: flex;
  align-items: center;
  margin-bottom: 15px;
  margin-left: 20px;
  width: calc(100% - 20px);
  height: 50px;
}

.contentText {
  margin-left: 20px;
  font-size: 14px;
  color: #666;
}

.addressText {
  font-size: 20px;
  width: 80%;
  line-height: 25px;
  font-weight: 500;
}

.addressImage {
  width: 20px;
  height: 20px;
}

.navigationText {
  font-size: 14px;
  line-height: 25px;
  color: #3DA8F5;
  margin-right: 10px;
}

.distanceText {
  margin-left: 5px;
  font-size: 14px;
  line-height: 25px;
}

.storeContacterLine {
  margin-left: 1px;
  width: 1px;
  height: 70%;
}

.callPhoneView {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 1px;
  width: calc(20% - 13px);
  height: 100%;
}

.callImage {
  width: 32px;
  height: 32px;
}
