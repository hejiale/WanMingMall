@import "../../utils/Template/ProductListTemplate/ProductListTemplate.wxss";
@import "Template/PropertyTemplate.wxss";
@import "../../utils/Template/BackGroundTemplate/BackGroundTemplate.wxss";

.searchContentView {
  display: flex;
  flex-direction: column;
  width: 100%;
  position: absolute;
}

.inputSearch {
  margin-left: 5px;
  height: 30px;
  line-height: 30px;
  font-size: 14px;
  width: calc(100% - 35px);
  background-color: white;
}

.hotSearchView {
  display: flex;
  flex-direction: column;
  margin-top: 50px;
  width: 100%;
}

.hotSearchTopView {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-left: 10px;
  height: 30px;
}

.hotTitle {
  width: 100px;
  line-height: 20px;
  font-size: 13px;
}

.hotItemView {
  margin-top: 10px;
  width: 100%;
}

.search-icon {
  margin-left: 5px;
  width: 30rpx;
  height: 30rpx;
}

.searchClassItem {
  display: inline-block;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  margin-left: 10px;
  margin-top: 5px;
  padding-left: 10px;
  padding-right: 10px;
  height: 30px;
  text-align: center;
  border-radius: 5px;
}

.searchClassItemText {
  display: inline-block;
  line-height: 30px;
  font-size: 12px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.searchRightView {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 50px;
  height: 100%;
}

.contentView {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
}

.topMenuView {
  position: fixed;
  display: flex;
  flex-direction: row;
  align-items: center;
  top: 0px;
  width: 100%;
  height: 45px;
  z-index: 600;
}

.classImageView {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 40px;
  height: 100%;
}

.search-input {
  display: flex;
  flex-direction: row;
  width: calc(100% - 55px);
  height: 30px;
  margin-left: 5px;
  border-radius: 5px;
  align-items: center;
  background-color: white;
}

.filter-icon {
  width: 18px;
  height: 16px;
}

.serach-text {
  margin: 5px;
  line-height: 30px;
  font-size: 12px;
}

.productListView {
  margin-top: 45px;
  width: calc(100% - 5px);
}

.emptyView{
  position: fixed;
  display: flex;
  justify-content: center;
  align-items: center;
  top: 45px;
  left: 0px;
  width: 100%;
  height: calc(100% - 45px);
}

.emptyImage{
  width: 111px;
  height: 123px;
}

