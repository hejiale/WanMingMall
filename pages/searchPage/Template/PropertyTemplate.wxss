.showPropertyBgView {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  bottom: 0;
  z-index: 1000;
}

#classViewCover {
  width: 100%;
  position: absolute;
  top: 0;
  bottom: 0;
  background-color: #333;
  opacity: 0.7;
}

.popContentView {
  position: absolute;
  display: flex;
  flex-direction: column;
  top: 0px;
  right: 0px;
  width: 80%;
  height: 100%;
  background-color: #fff;
  animation-duration: 0.5s;
  animation-name: first;
  animation-timing-function: ease;
}

@keyframes first {
  0% {
    right: -80%;
    top: 0px;
  }

  100% {
    right: 0px;
    top: 0px;
  }
}

.propertyClassView {
  width: 100%;
  height: 100%;
}

.footView {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  position: fixed;
  bottom: 0;
  width: 80%;
  height: 40px;
}

.resetView {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 10px;
  width: 35%;
  height: 30px;
  line-height: 40px;
  text-align: center;
  color: #3DA8F5;
  border: 1px solid #3DA8F5;
  font-size: 15px;
  border-radius: 3px;
}

.sureView {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 10px;
  width: 55%;
  height: 30px;
  line-height: 40px;
  text-align: center;
  color: white;
  font-size: 15px;
  background-color: #3DA8F5;
  border-radius: 3px;
}

.propertyScrollView {
  width: 100%;
  padding-bottom: 40px;
}

.priceView {
  display: flex;
  flex-direction: column;
  width: calc(100% - 15px);
  height: 65px;
}

.TitleText {
  margin-left: 10px;
  line-height: 20px;
  font-size: 12px;
  color: #111;
  font-weight: 500;
}

.priceSpaceView {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  height: 60px;
}

.priceSpaceText {
  margin-left: 10px;
  font-size: 12px;
  color: #999;
  white-space: nowrap;
}

.inputPriceText {
  background-color: #f0f0f0;
  font-size: 12px;
  text-align: center;
  height: 30px;
  line-height: 30px;
  border-radius: 5px;
}

.priceSpace {
  margin-left: 2px;
  margin-right: 2px;
  width: 13px;
  height: 1px;
  background-color: #dcdcdc;
}

.popClassView {
  margin-right: 5px;
}

.classesView {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
}

.classItem {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 5px;
  margin-left: 10px;
  width: calc((100% - 40px)/3);
  height: 40px;
  border-radius: 5px;
}

.classItemText {
  font-size: 11px;
  text-align: center;
  color: #222;
}

.popPropertyView {
  display: flex;
  flex-direction: column;
  margin-top: 10px;
  width: 100%;
}

.popPropertyTitleView {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 20px;
}

.propertyOpenView {
  display: flex;
  align-items: center;
  width: 50px;
  height: 100%;
}

.openImage {
  margin-left: 17px;
  width: 15px;
  height: 8px;
}

.propertysView {
  display: flex;
  flex-wrap: wrap;
  width: 100%;
}

.openBar {
  max-height: none;
  margin-top: 0px;
  width: 100%;
  overflow: hidden;
}

.show {
  display: block;
}

.hide {
  display: none;
}
