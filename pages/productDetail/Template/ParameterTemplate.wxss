.parameterMainView {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
}

.parameterContentView {
  display: flex;
  flex-direction: column;
  margin-top: 5px;
  width: 100%;
  background-color: white;
}

.specificationContentView {
  display: flex;
  flex-direction: column;
  width: 100%;
}

.topCancleButton {
  position: absolute;
  font-size: 15px;
  right: 0px;
  width: 60px;
  font-weight: 500;
  color: #4d9fd8;
  text-align: center;
}

.parameterInfoView {
  display: flex;
  align-items: center;
  width: 100%;
}

.parameterImage {
  width: 30%;
  height: 80px;
}

.parameterRightView {
  display: flex;
  flex-direction: column;
  width: calc(70% - 20px);
}

.specificationsView {
  display: flex;
  flex-direction: column;
  width: calc(100% - 20px);
  margin-top: 10px;
  margin-left: 20px;
  padding-bottom: 10px;
}

.classItem {
  display: inline-block;
  margin: 5px;
  width: calc((100% - 50px)/3);
  height: 28px;
  border-radius: 2px;
}

.classItemText {
  display: inline-block;
  font-size: 12px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 100%;
  text-align: center;
  line-height: 30px;
}

.popPropertyView {
  display: flex;
  flex-direction: row;
  width: 100%;
}

.popPropertyTitleView {
  display: flex;
  align-items: center;
  width: 50px;
  height: 38px;
}

.TitleText {
  line-height: 20px;
  font-size: 12px;
  color: #afafaf;
}

.parameterNumView {
  display: flex;
  align-items: center;
  width: 100%;
  height: 60px;
}

.parameterNumTitle {
  margin-left: 20px;
  font-size: 12px;
  color: #afafaf;
  width: 50px;
}

.editCartNumView {
  display: flex;
  align-items: center;
  margin-left: 5px;
  border: 1rpx solid #e6e6e6;
  border-radius: 3px;
}

.editCartButton {
  width: 60rpx;
  height: 49rpx;
}

.cartNumInputView {
  display: flex;
  justify-content: center;
  width: 100rpx;
  height: 49rpx;
  border-left: 1rpx solid #e6e6e6;
  border-right: 1rpx solid #e6e6e6;
}

.cartNumInputImage {
  width: 100%;
  height: 100%;
}

.cartNumText {
  text-align: center;
  font-size: 14px;
  height: 100%;
  line-height: 49rpx;
}

.parameterLineImage {
  width: 100%;
  height: 1px;
}

.parameterFootView {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 20px;
  margin-bottom: 20px;
  width: calc(100% - 20px);
  height: 36px;
  background-color: #63a0d4;
  border-radius: 3px;
}

.parameterFootText {
  font-size: 13px;
  color: white;
  text-align: center;
}
