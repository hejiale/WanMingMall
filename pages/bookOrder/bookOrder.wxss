}

.addressInfoView {
  display: flex;
  align-items: center;
  margin-top: 5px;
  padding-top: 15px;
  padding-bottom: 15px;
  width: 100%;
  background-color: white;
}

.addressIconImage {
  margin-left: 10px;
  width: 23px;
  height: 32px;
}

.contactInfoView {
  display: flex;
  flex-direction: column;
  margin-left: 10px;
  width: 83%;
}

.contactNameView {
  display: flex;
  align-items: center;
  width: 100%;
}

.contactAddressView {
  display: flex;
  align-items: center;
  margin-top: 5px;
  width: 100%;
}

.rightIconImage {
  width: 15px;
  height: 15px;
}

.productContentView {
  display: flex;
  flex-flow: column;
  width: 100%;
  background-color: white;
}

.productView {
  display: flex;
  margin-top: 1px;
  width: 100%;
  height: 85px;
  align-items: center;
  background-color: #FAFAFA;
}

.productImage {
  margin-left: 10px;
  width: 54px;
  height: 54px;
}

.productInfo {
  display: flex;
  flex-direction: column;
  margin-left: 20px;
  width: calc(100% - 74px);
}

.productNameText {
  font-size: 16px;
  width: calc(100% - 20px);
  height: 25px;
  line-height: 25px;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  font-weight: 500;
}

.priceView {
  margin-right: 10px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 25px;
}

.specificationView{
  display: flex;
  align-items: center;
}

.numText {
  font-size: 12px;
  text-align: right;
  color: #666666;
}

.price {
  font-size: 14px;
  color: #222;
  font-weight: 500;
}

.specificationsText {
  font-size: 12px;
  color: #666;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.shouldPayAmountView {
  display: flex;
  align-items: center;
  margin-top: 5px;
  width: 100%;
  height: 60px;
  background-color: white;
}

