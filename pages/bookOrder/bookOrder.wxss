  font-size: 20px;
  font-weight: 500;
}

.shouldPayAmountTitle {
  margin-left: 15px;
  width: 50%;
  font-size: 16px;
  color: #222;
  font-weight: 500;
}

.shouldPayIconImage {
  margin-left: 10px;
  width: 23px;
  height: 20px;
}

.storeInfoView {
