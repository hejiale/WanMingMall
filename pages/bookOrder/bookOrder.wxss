.scrollView {
  position: absolute;
  margin: 0px;
  width: 100%;
  padding-bottom: 55px;
}

.deliveryModeView {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-top: 5px;
  background-color: white;
  width: 100%;
  height: 60px;
}

.pickUpStyleView{
  display: flex;
  align-items: center;
  height: 100%;
  margin-right: 10px;
}

.deliveryModeTitle {
  margin-left: 15px;
  width: 50%;
  font-size: 20px;
  color: #222;
  line-height: 80px;
  font-weight: 500;
}

.deliveryModeImage {
  width: 94px;
  height: 35px;
}

.deliveryModeValue {
  margin-right: 10px;
  font-size: 16px;
}

.setDefaultAddressView {
