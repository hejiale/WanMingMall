.memberRightsEditView {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  bottom: 0;
  z-index: 888;
}

.classViewCover {
  width: 100%;
  position: absolute;
  top: 0;
  bottom: 0;
  background-color: #333;
  opacity: 0.7;
}

.memberRightsBgView {
  position: absolute;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-left: 10%;
  top: calc(50% - 160px);
  width: 80%;
  background-color: white;
  border-radius: 8px;
}

.memberBgTitleView {
  display: flex;
  align-items: center;
  width: 100%;
  height: 50px;
}

.memberBgTitle {
  width: 100%;
  text-align: center;
  font-size: 17px;
  font-weight: 500;
}

.memberCancleButton {
  position: absolute;
  font-size: 15px;
  right: 0px;
  width: 60px;
  font-weight: 500;
  color: #3DA8F5;
  text-align: center;
}

.memberRightsBgLine {
  width: 90%;
  height: 1px;
  background-color: #e6e6e6;
}

.offsetAmountView {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-top: 10px;
  width: 100%;
  height: 30px;
}

.offsetAmountTitle {
  margin-left: 20px;
  font-size: 16px;
  font-weight: 500;
}

.offsetUseAmountView {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  height: 30px;
}

.offsetUseAmountTitle {
  margin-left: 20px;
  width: 50%;
  font-size: 13px;
  color: #999;
}

.offsetUseAmountValue {
  margin-right: 15px;
  width: 150px;
  font-size: 13px;
  text-align: right;
  color: #999;
}

.offsetAmountValue {
  margin-right: 10px;
  width: 150px;
  font-size: 17px;
  text-align: right;
  font-weight: 500;
}

.offsetAmountInputView{
  display: flex;
  align-items: center;
  margin-top: 10px;
  width: calc(100% - 40px);
  height: 38px;
  font-size: 14px;
  border: 1px solid #e6e6e6;
  border-radius: 3px;
}

.offsetAmountInput {
  width: 90%;
  height: 100%;
  margin-left: 5px;
  font-size: 14px;
}

.canUseAmountView{
  display: flex;
  align-items: center;
  margin-top: 5px;
  width: 100%;
  height: 30px;
}

.canUseAmountTitle{
  margin-left: 20px;
  font-size: 13px;
  color: #3DA8F5;
}

.canUseAmountValue{
  margin-left: 10px;
  font-size: 13px;
  color: #3DA8F5;
}


.memberRightsBgBottomLine {
  margin-top: 20px;
  width: 92%;
  height: 1px;
  background-color: #e6e6e6;
}

.bottomButton{
  display: flex;
  justify-content: center;
  margin-top: 20px;
  margin-bottom: 20px;
  width: 90%;
  height: 36px;
  line-height: 36px;
  font-size: 14px;
  color: white;
  border-radius: 5px;
}

