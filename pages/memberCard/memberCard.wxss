/* pages/memberCard/memberCard.wxss */
@import "../../utils/Template/BackGroundTemplate/BackGroundTemplate.wxss";
@import "memberCardTemplate/memberCardTemplate.wxss";

.contentView {
  position: relative;
  width: 100%;
}

.tabBarView {
  display: flex;
  align-items: center;
  position: fixed;
  left: 0px;
  top: 0px;
  width: 100%;
  height: 50px;
  background-color: white;
  z-index: 1000;
}

.tabItemView {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-left: 20px;
  width: calc(50% - 30px);
  height: 100%;
}

.tabItemText {
  font-size: 14px;
  text-align: center;
  height: 47px;
  line-height: 50px;
  padding-left: 5px;
  padding-right: 5px;
  font-weight: 500;
}

.cardContentView {
  position: absolute;
  margin-top: 50px;
  padding-bottom: 50px;
  width: 100%;
}

.footView {
  display: flex;
  position: fixed;
  left: 0px;
  bottom: 0px;
  width: 100%;
  height: 50px;
  background-color: #f5f5f5;
  z-index: 1000;
  justify-content: center;
  align-items: center;
}

.footButton {
  display: flex;
  width: calc(100% - 20px);
  height: 36px;
  background-color: #3DA8F5;
  border-radius: 5px;
  font-size: 16px;
  color: white;
  font-weight: 500;
  justify-content: center;
  align-items: center;
}

.emptyCouponView{
  position: fixed;
  display: flex;
  align-items: center;
  justify-content: center;
  top: 50px;
  width: 100%;
  height: calc(100% - 50px);
}

.emptyCouponImage{
  width: 240rpx;
  height: 234rpx;
}
