@import "../../utils/Template/BackGroundTemplate/BackGroundTemplate.wxss";

.topView {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: fixed;
  top: 5px;
  width: 100%;
  height: 50px;
  background-color: white;
  z-index: 1000;
}

.titleView {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 50px;
}

.topText {
  margin-left: 10px;
  width: 100px;
  height: 30px;
  line-height: 30px;
  font-size: 16px;
  font-weight: 500;
}

.editText {
  margin-right: 10px;
  width: 100px;
  height: 30px;
  line-height: 30px;
  font-size: 14px;
  color: #3DA8F5;
  text-align: right;
}

.topLine {
  width: 95%;
  height: 1px;
  background-color: #e6e6e6;
}

.emptyCartView{
  position: fixed;
  display: flex;
  align-items: center;
  justify-content: center;
  top: 55px;
  width: 100%;
  height: calc(100% - 55px);
  padding-bottom: 5px;
}

.emptyImage{
  width: 182px;
  height: 218px;
  margin-bottom: 56px;
}

.contentView {
  margin-top: 56px;
  height: calc(100% - 106px);
  padding-bottom: 50px;
}

.unOpenView {
  display: flex;
  align-items: center;
  width: 100%;
  height: 120px;
  background-color: white;
  border-bottom: 1px solid #f5f5f5;
}

.openView {
  display: flex;
  align-items: center;
  width: 100%;
  height: 120px;
  background-color: white;
  border-bottom: 1px solid #f5f5f5;
}

.onSelectView {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 60px;
  height: 100%;
}

.iconSelectedImage {
  width: 23px;
  height: 23px;
}

.cartView {
  display: flex;
  align-items: center;
  width: calc(100% - 60px);
  padding-bottom: 5px;
}

.productInfo {
  display: flex;
  flex-direction: column;
  margin-left: 20px;
  width: calc(100% - 100px);
}

.productImageView{
  display: flex;
  align-items: center;
  justify-content: center;
  width: 80px;
  height: 80px;
}

.productImage {
  width: 100%;
  height: 100%;
}

.productNameText {
  width: 100%;
  font-size: 16px;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  font-weight: 500;
}

.specificationsView{
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 30px;
}

.specificationsText{
  font-size: 14px;
  color: #999999;
  font-weight: 300;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.shelvesImage{
  width: 52px;
  height: 16px;
  line-height: 16px;
  margin-right: 10px;
  font-size: 10px;
  border-color: #999999;
  border-radius: 3px;
  text-align: center;
}

.priceView {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.openPriceView{
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 10px;
}

.price {
  font-size: 16px;
  font-weight: 300;
}

.numText {
  font-size: 16px;
  padding-right: 10px;
  font-weight: 300;
}

.editCartNumView {
  display: flex;
  align-items: center;
  margin-left: calc(100% - 240rpx);
  border: 1rpx solid #e6e6e6;
  border-radius: 3px;
  width: 220rpx;
}

.editCartButton {
  width: 60rpx;
  height: 49rpx;
}

.cartNumInputView {
  display: flex;
  justify-content: center;
  width: 100rpx;
  height: 49rpx;
  border-left: 1rpx solid #e6e6e6;
  border-right: 1rpx solid #e6e6e6;
}

.cartNumInputImage {
  width: 100%;
  height: 100%;
}

.cartNumText {
  text-align: center;
  font-size: 14px;
  height: 100%;
  line-height: 49rpx;
}

.parameterLineImage {
  width: 100%;
  height: 1px;
}

.footView {
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  width: 100%;
  height: 50px;
  bottom: 0px;
  background-color: white;
  z-index: 1000;
}

.normalBottomView {
  display: flex;
  align-items: center;
  width: calc(100% - 20px);
  height: 36px;
  background-color: #3DA8F5;
  border-radius: 5px;
}

.totalOrderPriceText {
  width: 100%;
  height: 100%;
  line-height: 36px;
  color: white;
  font-size: 16px;
  text-align: center;
}

.chooseAllView {
  display: flex;
  align-items: center;
  width: calc(100% - 20px);
  height: 36px;
  background-color: #3DA8F5;
  border-radius: 5px;
}

.show {
  display: block;
}

.hide {
  display: none;
}
